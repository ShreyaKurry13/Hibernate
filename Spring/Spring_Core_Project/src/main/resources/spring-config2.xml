<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"	
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="userBean" class="example.spring.core.UserService">
		<property name="firstname" value="James"/>
		<property name="lastname" value="Gosling"/>
		<property name="age" value="78"/>
	</bean>
	
	<bean id="userBean2" class="example.spring.core.UserService">
		<constructor-arg value="Mark"/>
		<constructor-arg value="Wiens"/>
		<constructor-arg value="56"/>
	</bean>
</beans>